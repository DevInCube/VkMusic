<Window x:Class="My.VKMusic.Views.TestDDWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:conv="clr-namespace:My.VKMusic.Views.Converters" 
        xmlns:v="clr-namespace:My.VKMusic.Views" 
        x:Name="this"
        Title="TestDDWindow" Height="300" Width="300">
    <Window.Resources>
        <conv:VisibilityConverter x:Key="Vis"/>
        <conv:DragConverter x:Key="DragConv"/>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="121*"/>
            <ColumnDefinition Width="121*"/>
        </Grid.ColumnDefinitions>
        <v:AudioListControl DragManager="{Binding DataContext.DragManager, ElementName=this}"  DataContext="{Binding Items1}"/>
        <v:AudioListControl DragManager="{Binding DataContext.DragManager, ElementName=this}"  DataContext="{Binding Items2}" Grid.Column="1"/>        
    </Grid>
</Window>
