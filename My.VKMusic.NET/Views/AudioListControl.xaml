<UserControl x:Class="My.VKMusic.Views.AudioListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:v="clr-namespace:My.VKMusic.Views" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <ItemsControl DataContext="{Binding}" ItemsSource="{Binding}" AllowDrop="True" 
                      Drop="AudioItem_Drop"
                      DragEnter="AudioItem_DragEnter"
                      DragLeave="ItemsControl_DragLeave">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <v:AudioItem DataContext="{Binding}"
                                 Drop="AudioItem_Drop"  
                                 DragEnter="AudioItem_DragEnter"
                                 AllowDrop="True"
                                 />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </ScrollViewer>
</UserControl>
